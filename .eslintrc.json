{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-restricted-globals": [
            "error",
            {
                "name": "self",
                "message": "Use dedicated variables instead of global objects like self."
            }
        ]
    }
}
